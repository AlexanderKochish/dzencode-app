{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": ["REDIS_URL", "DATABASE_URL", "NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
   
    "lint": {},
    "push": {
        "cache": false,
        "env": ["DATABASE_URL"] 
      },
      "seed": {
        "cache": false,
        "env": ["DATABASE_URL"]
      },
      "generate": {
        "cache": false,
        "env": ["DATABASE_URL"]
      },
      "dev": {
        "cache": false,
        "persistent": true,
        "env": ["DATABASE_URL", "REDIS_URL"]
      },
      "migrate:deploy": {
        "cache": false,
        "env": ["DATABASE_URL"]
      }
  }
}